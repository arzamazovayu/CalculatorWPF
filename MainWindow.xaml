<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="353" Background="#FF191919" MinWidth="353" MinHeight="550" MaxWidth="353" MaxHeight="550" ResizeMode="NoResize" Cursor="Hand">
    <Window.Resources>
        <Style TargetType="Button" x:Key="NumButton">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="1,1,1,1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1,1,1,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#FF2D2D2D"/>
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter Property="Background" Value="#FF2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style BasedOn="{StaticResource NumButton}" TargetType="Button" x:Key="SigButton">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style BasedOn="{StaticResource SigButton}" TargetType="Button" x:Key="EntButton">
            <Setter Property="Background" Value="#FFC18502"/>
        </Style>
        <Style TargetType="Menu" x:Key="MenuS">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property = "Height" Value= "25"/>
            <Setter Property="FontFamily" Value="Verdana"/>
        </Style>
        <Style TargetType="MenuItem" x:Key="MenuItemS">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="BorderBrush" Value="#FF191919"/>
            <Setter Property = "Height" Value= "25"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBox" x:Key="EnterField">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1,1,1,1"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu HorizontalAlignment="Left" DockPanel.Dock="Top" VerticalAlignment="Top" Style="{StaticResource ResourceKey=MenuS}">
            <MenuItem Header="Options" BorderThickness="0,0,0,0" BorderBrush="#FF191919" Height="25">
                <MenuItem Header="Exit" Style="{StaticResource ResourceKey=MenuItemS}" BorderBrush="Black"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="105*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="88*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="comm" Grid.Column="0" Content="," Grid.Row="7" 	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,1,1"/>
            <Button x:Name="invert" Grid.Column="2" Content="+/-" Grid.Row="7" Style="{StaticResource ResourceKey=NumButton}" Margin="2,1,1,1"/>
            <Button x:Name="zero" Grid.Column="1" Content="0" Grid.Row="7"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,0,1"/>
            <Button x:Name="entr" Grid.Column="3" Content="=" Grid.Row="7"	Style="{StaticResource ResourceKey=EntButton}" Margin="1,1,1,1"/>
            <Button x:Name="seven" Grid.Column="0" Content="7" Grid.Row="6"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,1,1"/>
            <Button x:Name="eight" Grid.Column="1" Content="8" Grid.Row="6"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,0,1"/>
            <Button x:Name="nine" Grid.Column="2" Content="9" Grid.Row="6"	Style="{StaticResource ResourceKey=NumButton}" Margin="2,1,1,1"/>
            <Button x:Name="div" Grid.Column="3" Content=":" Grid.Row="6"	Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,1,1"/>
            <Button x:Name="four" Grid.Column="0" Content="4" Grid.Row="5"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,1,1"/>
            <Button x:Name="five" Grid.Column="1" Content="5" Grid.Row="5"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,0,1"/>
            <Button x:Name="six" Grid.Column="2" Content="6" Grid.Row="5"	Style="{StaticResource ResourceKey=NumButton}" Margin="2,1,1,1"/>
            <Button x:Name="mult" Grid.Column="3" Content="x" Grid.Row="5"	Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,1,1"/>
            <Button x:Name="one" Grid.Column="0" Content="1" Grid.Row="4"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,1,1"/>
            <Button x:Name="two" Grid.Column="1" Content="2" Grid.Row="4"	Style="{StaticResource ResourceKey=NumButton}" Margin="1,1,0,1"/>
            <Button x:Name="three" Grid.Column="2" Content="3" Grid.Row="4"	Style="{StaticResource ResourceKey=NumButton}" Margin="2,1,1,1"/>
            <Button x:Name="sub" Grid.Column="3" Content="-" Grid.Row="4"	Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,1,1"/>
            <Button x:Name="ext" Grid.Column="0" Content="exit" Grid.Row="3" Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,1,1"/>
            <Button x:Name="ce" Grid.Column="1" Content="CE" Grid.Row="3"	Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,0,1"/>
            <Button x:Name="c" Grid.Column="2" Content="C" Grid.Row="3"		Style="{StaticResource ResourceKey=SigButton}" Margin="2,1,1,1"/>
            <Button x:Name="sum" Grid.Column="3" Content="+" Grid.Row="3"	Style="{StaticResource ResourceKey=SigButton}" Margin="1,1,1,1"/>
            <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Text="0" Style="{StaticResource ResourceKey=EnterField}" Margin="1,1,1,1" Grid.RowSpan="1" IsReadOnly="True" />
        </Grid>

    </DockPanel>
</Window>
