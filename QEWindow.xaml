<Window x:Class="CalculatorWPF.QEWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quadratic Equation Solver" Height="400" Width="300" ResizeMode="NoResize"
        Background="#FF191919" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#FF2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Silver"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Коэффициент a:" Margin="5"/>
        <TextBox x:Name="A" Grid.Row="0" Grid.Column="1" Text="1" 
                 PreviewTextInput="NumberValidationTextBox" Grid.ColumnSpan="2" Margin="7"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Коэффициент b:" Margin="5"/>
        <TextBox x:Name="B" Grid.Row="1" Grid.Column="1" Text="0" 
                 PreviewTextInput="NumberValidationTextBox" Grid.ColumnSpan="2" Margin="7"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Коэффициент c:" Margin="5"/>
        <TextBox x:Name="C" Grid.Row="2" Grid.Column="1" Text="0" 
                 PreviewTextInput="NumberValidationTextBox" Grid.ColumnSpan="2" Margin="7"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Уравнение: ax² + bx + c = 0" 
                   FontWeight="Bold" HorizontalAlignment="Left" Margin="47,10,0,10"/>

        <Button Content="Решить" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Click="Solve_Click" Width="100" Margin="5"/>

        <TextBox x:Name="Result" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
                 TextAlignment="Left" 
                 FontSize="12" TextWrapping="Wrap" IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto" 
                 Background="#FF252525" BorderBrush="#FF555555" Margin="0,5,0,5" />

        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="Закрыть" 
                Click="Close_Click" Width="100" HorizontalAlignment="Center" Margin="0,5,0,5"/>
    </Grid>
</Window>