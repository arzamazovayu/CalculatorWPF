<Window x:Class="CalculatorWPF.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="220" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FF191919">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtAbout" Grid.Row="0" IsReadOnly="True" 
                 Background="#FF252525" Foreground="Silver" 
                 BorderBrush="#FF555555" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" FontSize="12" 
                 Padding="10" TextAlignment="Center"/>

        <Button Grid.Row="1" Content="Закрыть" Width="80" 
                Click="Close_Click" HorizontalAlignment="Center" 
                Margin="0,5,0,0" Background="#FF353535" 
                Foreground="Silver" BorderBrush="#FF555555"/>
    </Grid>
</Window>